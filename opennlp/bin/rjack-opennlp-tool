$LOAD_PATH.unshift File.expand_path( '../../lib', __FILE__ )

require 'rubygems'
require 'rjack-opennlp'

class Tool
  include RJack::OpenNLP

  def run
    cmd = ARGV.shift
    case cmd

    when 'sentences'
      input = ARGF.read
      model = load_sentence_model
      detector = SentenceDetectorME.new( model )
      sentences = detector.sent_detect( input )

      sentences.each do |sentence|
        $stdout.write sentence
        $stdout.write "\n"
      end

    else
      $stderr.puts <<USAGE
Usage: #{$0} sentences [file...]
Sentence split stdin or file(s) to stdout, line delimited.
USAGE
      exit 1
    end
  end

end

Tool.new.run
