$LOAD_PATH << './lib'
require 'slf4j/base'

require 'rubygems'
gem     'rjack-tarpit', '~> 1.0.0'
require 'rjack-tarpit'

t = RJack::TarPit.new( 'slf4j', SLF4J::VERSION )

t.specify do |h|
  h.developer( "David Kellum", "dek-ruby@gravitext.com" )
  h.rubyforge_name = "rjack"
end

loaders =
  begin
    l = SLF4J::ADAPTERS.flatten.compact
    l.delete( "jul-to-slf4j" ) # exception: maintained as source
    l
  end

t.generated_files = loaders.map { |adp| "lib/#{t.name}/#{adp}.rb" }

t.jars =
  begin
    j = [ 'slf4j-api' ]
    j += SLF4J::ADAPTERS.map { |i,o| [ i, "slf4j-#{o}" ] }.flatten.compact
    j.map { |n| "#{n}-#{SLF4J::SLF4J_VERSION}.jar" }
  end

file 'Manifest.txt' => [ "lib/#{t.name}/base.rb" ]

t.assembly_version = 1.0

t.define_tasks

loaders.each do |adapter|
  file "lib/slf4j/#{adapter}.rb" => [ "lib/#{t.name}/base.rb", 'Rakefile' ] do
    open( "lib/slf4j/#{adapter}.rb", 'w' ) do |out|
      out.write <<END
require 'slf4j'
SLF4J.require_adapter( '#{adapter}' )
END
    end
  end
end
